<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.chen.entity.UsersEntity" table="users" schema="schoolForum">
        <id name="userEmail">
            <column name="user_email" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="userPwd">
            <column name="user_pwd" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>