<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <package name="home"  extends="struts-default">
        <action name="home_*" class="com.chen.action.HomeAction" method="{1}">
            <result name="login">/login.jsp</result>
            <result name="regist">/regist.jsp</result>
            <result name="home" type="redirectAction">topic_listAll</result>
        </action>
    </package>
    <package name="topic" extends="struts-default">
        <action name="topic_*" class="com.chen.action.TopicAction" method="{1}">
            <result name="{1}">/{1}.jsp</result>
            <result name="listAll">/listAll.jsp</result>
            <result name="showTopic">/showTopic.jsp</result>
        </action>
    </package>
</struts>